@model TheBookingPlatform.ViewModels.OpeningHourListingViewModel
@{
    ViewBag.Title = "Index";
}

<div style="padding-left:0px;padding-right:0px;" class="col-md-12">
    @if (Model.OpeningHours != null)
    {
        <div class="card">

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th class="text-center">
                                Day
                            </th>
                            <th class="text-center">
                                Time
                            </th>
                            <th class="text-center">
                                IsClosed
                            </th>
                         

                            <th class="text-center">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OpeningHours)
                        {
                            <tr>
                                <td class="text-center">@item.Day</td>
                                <td class="text-center">@item.Time</td>
                                

                                @if (item.isClosed == true)
                                {
                                    <td class="text-center">
                                        <select class="form-control" id="AllowOnlineBooking" onchange="ChangeIsClosedStatus('@item.ID')">
                                            <option value="True" selected>Yes</option>
                                            <option value="False">No</option>
                                        </select>
                                    </td>

                                }
                                else
                                {
                                    <td class="text-center">
                                        <select class="form-control" id="AllowOnlineBooking" onchange="ChangeIsClosedStatus('@item.ID')">
                                            <option value="True">Yes</option>
                                            <option selected value="False">No</option>
                                        </select>
                                    </td>

                                }

                                <td style="display:flex;" class="text-center">

                                    <a title="Edit" href="@Url.Action("Action", "OpeningHour", new { ID = item.ID })" class="btn btn-sm btn-rounded btn-info btn-icon-text"><i class="material-icons">edit</i></a>
                                    <button title="Delete" data-href="@Url.Action("Delete", "OpeningHour", new { ID = item.ID })" type="button" class="data-btn btn btn-sm btn-rounded btn-danger btn-icon-text" data-toggle="modal" data-target="#actionModal"><i class="material-icons">delete</i></button>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {

        <div class="alert alert-warning col-md-12" role="alert">
            Sorry! No records exist.
        </div>
    }
</div>


<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#actionModal .modal-dialog").html(response);
            });
    });
</script>



