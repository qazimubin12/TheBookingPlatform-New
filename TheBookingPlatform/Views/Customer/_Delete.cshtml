@model TheBookingPlatform.ViewModels.CustomerActionViewModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <span>Delete Customer </span>
            </h5>
           
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />
            </form>
            <div class="alert alert-danger" role="alert">
                Are you sure you want to delete this Customer ?

            </div>
        </div>
        <div class="modal-footer">
            <button id="actionButton" type="button" class="btn btn-danger"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i> Close</button>
        </div>
    </div>
}

<script>
	$("#actionButton").click(function () {
        $.ajax({
            url: '@Url.Action("Delete", "Customer")',
            type: "post",
            data: $("#actionForm").serialize()
        })
            .done(function (response) {
                alert(response.Message);
                if (response.Message == "Deleted Successfully") {
                    RepopulateCustomers();
                    $(".btn-secondary[data-dismiss='modal']").click();
                }
                
            });
		
	});
</script>