@model TheBookingPlatform.ViewModels.UsersListingViewModel
@{
    ViewBag.Title = "Index";
}
<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        @if (Model.Users != null)
        {
            <div class="card">

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th class="text-center">
                                    Name
                                </th>
                                <th class="text-center">
                                    Email
                                </th>
                                <th class="text-center">
                                    Contact
                                </th>
                              
                                @if (User.IsInRole("Super Admin"))
                                {
                                    <th class="text-center">
                                        Business
                                    </th>
                                }

                                <th class="text-center">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Users)
                            {
                                string ClassName = "";
                                if (item.IsActive == false)
                                {
                                    ClassName = "NONACTIVE";
                                }
                                else
                                {
                                    ClassName = "ACTIVE";
                                }

                                <tr class="@ClassName">
                                    <td class="text-center">@item.Name</td>
                                    <td class="text-center">@item.Email</td>
                                    <td class="text-center">@item.PhoneNumber</td>
                                    @if (User.IsInRole("Super Admin"))
                                    {
                                        <td class="text-center">@item.Company</td>


                                    }
                                   

                                <td class="text-center">

                                    <button data-href="@Url.Action("Action", "User", new { ID = item.Id })" type="button" class="data-btn btn btn-sm btn-rounded btn-info btn-icon-text" data-toggle="modal" data-target="#actionModal"><i class="mdi mdi-pencil"></i> EDIT</button>
                                    @if (User.IsInRole("Super Admin"))
                                    {
                                    <button data-href="@Url.Action("UserRoles", "User", new { ID = item.Id })" type="button" class="data-btn btn btn-success btn-sm btn-rounded btn-icon-text" data-toggle="modal" data-target="#actionModal"><i class="mdi mdi-account-details"></i>ROLES</button>
                                    }
                                    @if (Model.LoggedInUser != null)
                                    {
                                        if (item.IsActive == false)
                                        {
                                            <button data-href="@Url.Action("Activate", "User", new { ID = item.Id })" type="button" class="data-btn btn btn-sm btn-rounded btn-success btn-icon-text" data-toggle="modal" data-target="#actionModal"><i class="mdi mdi-restore"></i>ACTIVATE</button>
                                        }
                                        else
                                        {
                                            if (Model.LoggedInUser.Id == item.Id)
                                            {
                                                <button disabled data-href="@Url.Action("Delete", "User", new { ID = item.Id })" type="button" class="data-btn btn btn-sm btn-rounded btn-danger btn-icon-text" data-toggle="modal" data-target="#actionModal"><i class="mdi mdi-delete"></i>DELETE</button>
                                            }
                                            else
                                            {
                                                <button data-href="@Url.Action("Delete", "User", new { ID = item.Id })" type="button" class="data-btn btn btn-sm btn-rounded btn-danger btn-icon-text" data-toggle="modal" data-target="#actionModal"><i class="mdi mdi-delete"></i>DELETE</button>
                                            }
                                        }
                                    }



                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {

            <div class="alert alert-warning col-md-12" role="alert">
                Sorry! No records exist.
            </div>
        }
    </div>
</div>

<script>
    function ChangeIsActiveStatus(ID) {
        $.ajax({
            url: '@Url.Action("UpdateIsActiveStatus", "User")', // Update this with your controller and action names
            type: 'POST',
            data: { ID: ID },
            success: function (result) {
                alert("Active Status Updated");

            },
            error: function (error) {
                // Handle error response if needed
            }
        });
    }
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#actionModal .modal-dialog").html(response);
            });
    });
</script>



