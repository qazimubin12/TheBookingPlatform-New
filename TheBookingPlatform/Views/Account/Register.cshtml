        </div>

        <!-- Form Section -->
        <div class="form-section">
            <div class="card card-signup">
                <img class="img-fluid" style=" margin-bottom: 15px; width: 60%; display: flex; justify-self: center;" src="~/Content/TBPContent/v2 ybp logo design-02.png" />
                <h6 style="margin-left:20px;margin-bottom:0px !important; " class="card-title "><b>Register</b></h6>
