    <!-- Custom Script for Form Validation -->
    <script type="text/javascript">
        $(document).ready(function () {
            const $nameInput = $('#Name');
            const $contactInput = $('#Contact');
            const $countryInput = $('#Country');
            const $emailInput = $('#Email');
            const $passwordInput = $('#Password');
            const $confirmPasswordInput = $('#ConfirmPassword');
            const $submitButton = $('#SubmitButton');
            const $errorMessage = $('#error-message');

            function showError(message) {
                $errorMessage.text(message);
            }

            function clearError() {
                $errorMessage.text('');
            }

            function setInputError($input, isValid, errorMessage) {
                if (isValid) {
                    $input.css('border', '');
                } else {
                    $input.css('border', 'solid 1px red');
                    showError(errorMessage);
                }
            }

            function validateForm() {
                let valid = true;
                clearError();

                // Validate Name
                setInputError($nameInput, $nameInput.val().trim() !== '', 'Please enter your name.');
                valid &= $nameInput.val().trim() !== '';

                // Validate Contact
                setInputError($contactInput, $contactInput.val().trim() !== '', 'Please enter your contact number.');
                valid &= $contactInput.val().trim() !== '';

                // Validate Password length
                const passwordValid = $passwordInput.val().length >= 8;
                setInputError($passwordInput, passwordValid, 'Password must be at least 8 characters long.');
                valid &= passwordValid;

                // Validate Confirm Password matches Password
                const passwordsMatch = $passwordInput.val() === $confirmPasswordInput.val();
                setInputError($confirmPasswordInput, passwordsMatch, 'Passwords do not match.');
                valid &= passwordsMatch;

                $submitButton.prop('disabled', !valid);  // Enable/disable submit button
                return valid;
            }

            // Add event listeners for input changes
            $('input').on('input', validateForm);

            // Disable the submit button on form submit to prevent multiple submissions
            $('form').on('submit', function () {
                $submitButton.prop('disabled', true);
            });
        });
    </script>
</body>
