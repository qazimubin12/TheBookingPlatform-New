@model TheBookingPlatform.ViewModels.PayRollViewModel
@{ Layout = null;
}


<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Your Booking Platform - PayRoll Slip</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">

    <!-- External CSS libraries -->
    <link type="text/css" rel="stylesheet" href="~/Content/main/assets/css/bootstrap.min.css">
    <link type="text/css" rel="stylesheet" href="~/Content/main/assets/fonts/font-awesome/css/font-awesome.min.css">

    <!-- Favicon icon -->
    <link rel="shortcut icon" href="~/Content/TBPContent/LogoBlack.png" type="image/x-icon">

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Custom Stylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Content/main/assets/css/style.css">
<style>
    .invoice-3 .logo img {
        height: 100px;
    }
</style>
</head>

<body>

    <!-- Invoice 3 start -->
    <div class="invoice-3 invoice-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="invoice-inner">
                        <div class="invoice-info" id="invoice_wrapper">
                            <div class="invoice-headar">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="invoice-name">
                                            <!-- logo started -->
                                            <div class="logo">
                                                <img src="@Model.CompanyLogo" alt="logo">
                                            </div>
                                            <!-- logo ended -->
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="invoice">
                                            <h1 class="text-end inv-header-1 mb-0">Payroll for: @Model.VStartDate | @Model.VEndDate</h1>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="invoice-top">
                                <div class="row">
                                    <div class="col-sm-6 mb-30">
                                        <div class="invoice-number">
                                            <h4 class="inv-title-1">Invoice To</h4>
                                            <p class="invo-addr-1 mb-0">
                                                @Model.EmployeeName <br />
                                                @Model.EmployeeSpecialization<br />
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 mb-30">
                                        <div class="invoice-number text-end">
                                            <h4 class="inv-title-1">Bill From</h4>
                                            <p class="invo-addr-1 mb-0">
                                                @Model.CompanyName  <br />
                                                @Model.CompanyAddress <br />
                                                @Model.CompanyPhoneNumber <br />
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                @*<div class="row">
                                    <div class="col-sm-6 mb-30">
                                        <h4 class="inv-title-1">Date</h4>
                                        <p class="inv-from-1 mb-0">Due Date: 21/09/2021</p>
                                    </div>
                                    <div class="col-sm-6 text-end mb-30">
                                        <h4 class="inv-title-1">Payment Method</h4>
                                        <p class="inv-from-1 mb-0">Credit Card</p>
                                    </div>
                                </div>*@
                            </div>
                            <div class="invoice-center">
                                <div class="order-summary">
                                    <h4>To Pay</h4>
                                    <div class="table-outer">
                                        <table class="default-table invoice-table">
                                            
                                            <tbody>
                                                <tr>
                                                    <td>Order Summary</td>
                                                </tr>
                                                <tr>
                                                    <td>To Pay</td>
                                                    <td></td>
                                                    <td></td>
                                                  
                                                        <td>@Model.Amount @Model.Company.Currency</td>
                                                    
                                                </tr>
                                                @if (Model.Type != "Percentage")
                                                {
                                                <tr>
                                                    <td><strong>Amount</strong></td>
                                                    <td></td>
                                                    <td></td>
                                                    <td><strong>@Model.FinalAmount</strong></td>
                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="invoice-bottom">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="important-note mb-30">
                                            <h3 class="inv-title-1">Important Note</h3>
                                            <ul class="important-notes-list-1">
                                                <li>
                                                    <b>Disclaimer:</b>
                                                    This document is a draft payroll developed by YBP and is intended for internal use only. It is provided solely for review and informational purposes and does not constitute a final or binding document. The figures and information contained herein are subject to change and should not be relied upon for any financial or legal commitments. The author assumes no liability or responsibility for any errors, omissions, or discrepancies that may be present in this draft.
                                                    Feel free to adjust any information to better suit your specific needs and context.

                                                </li>
                                               
                                            </ul>
                                        </div>
                                    </div>
                                  
                                </div>
                            </div>
                        </div>
                        <div class="invoice-btn-section clearfix d-print-none">
                            <a href="javascript:window.print()" class="btn btn-lg btn-print">
                                <i class="fa fa-print"></i> Print Invoice
                            </a>
                            <a id="invoice_download_btn" class="btn btn-lg btn-download btn-theme">
                                <i class="fa fa-download"></i> Download Invoice
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Invoice 3 end -->

    <script src="~/Content/main/assets/js/jquery.min.js"></script>
    <script src="~/Content/main/assets/js/jspdf.min.js"></script>
    <script src="~/Content/main/assets/js/html2canvas.js"></script>
    <script src="~/Content/main/assets/js/app.js"></script>
</body>
</html>

