@model TheBookingPlatform.ViewModels.ReferralListingViewModel
@{
    ViewBag.Title = "Index";
}


<div class="col col-lg-12">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">

            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">
                        Referrals
                    </h2>
                </div>
                <div class="table-responsive">
                    <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                        <thead>
                            <tr>

                                <th class="text-center">
                                    Referral Code
                                </th>
                                <th class="text-center">
                                    Customer
                                </th>
                                <th class="text-center">
                                    Balance
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ReferralCustomers)
                            {
                                <tr>
                                    <td>
                                        @item.ReferralCode
                                    </td>
                                    <td>
                                        @item.FirstName @item.LastName
                                    </td>
                                    <td>
                                        @item.ReferralBalance
                                    </td>
                                    <td><a href="@Url.Action("ReferralLists", "Referral", new {ID= item.ID})" class="btn btn-primary btn-round btn-sm">VIEW REFERRALS</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>
